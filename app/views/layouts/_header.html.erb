<div id="header">
  <div class="header-top">
    <div class="container">
      <div class="pull-left auto-width-left">
        <ul class="top-menu menu-beta l-inline">
          <li>
            <i class="glyphicon glyphicon-home"></i>
             30, 362 Giải Phóng, Hoàng Mai, Hà Nội
          </li>
          <li>
            <i class="glyphicon glyphicon-earphone"></i>
             0981036562
          </li>
        </ul>
      </div>
      <div class="pull-right auto-width-right">
        <ul class="top-details menu-beta l-inline">
          <li><%= link_to "Đăng ký", "#" %></li>
          <li><%= link_to "Đăng nhập", "#" %></li>
        </ul>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
  <div class="header-body">
    <div class="container beta-relative">
      <div class="pull-left">
        <%= link_to root_path, id: "logo" do %>
          <%= image_tag "logo.png", style: "width: 200px" %>
        <% end %>
      </div>
      <div class="pull-right">
        <form class="navbar-form navbar-left" action="/action_page.php">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <input type="submit" class="btn btn-default" value="Tìm kiếm"
            style="margin-bottom: 20px;">
        </form>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to "SHOPPING CART", root_path, class: "navbar-brand" %>
      </div>
      <ul class="nav navbar-nav">
        <li class="active">
          <%= link_to "Home", root_path %>
        </li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle",
            data: {toggle: "dropdown"} do %>
            Sản phẩm
            <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <% @categories.each do |category| %>
              <li>
                <%= link_to "#{category.name}", "/filter_product/#{category.id}" %>
              </li>
            <% end %>
          </ul>
        </li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle",
            data: {toggle: "dropdown"} do %>
            Quản lí Category
            <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "Danh sách thể loại", categories_path %></li>
            <li><%= link_to "Thêm thể loại", new_category_path %></li>
          </ul>
        </li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle",
            data: {toggle: "dropdown"} do %>
            Quản lí Product
            <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "Danh sách sản phẩm", products_path %></li>
            <li><%= link_to "Thêm sản phẩm", new_product_path %></li>
          </ul>
        </li>
        <li><%= link_to "Liên hệ", "#" %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right ">
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle",
            data: {toggle: "dropdown"} do %>
            <i class="glyphicon glyphicon-shopping-cart"></i>
            Giỏ hàng (<%= @bill_details.count %>)
            <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu" style="overflow: scroll; height: auto;">
            <% if @bill_details.count != 0 %>
              <% total = 0 %>
              <% @bill_details.each do |bill_detail| %>
                <li style="padding: 10px;width: 200px;
                  border-top: 1px solid #ddd;">
                  <%= link_to product_path(id: bill_detail.product_id) do %>
                    <%= image_tag "#{bill_detail.product.image.url}",
                      style: "width:100px;height:50px;" %>
                  <% end %>
                  <%= link_to bill_detail, style: "float:right",
                    method: :delete, data: {confirm: "Sure"} do %>
                    <i class="glyphicon glyphicon-remove"></i>
                  <% end %>
                  <br>
                  Số lượng: <%= bill_detail.quantity %><br>
                  Price: <%= number_to_currency(bill_detail.product.price) %> VND
                </li>
                <% total += bill_detail.quantity*bill_detail.product.price %>
              <% end %>
              <li style="padding: 10px;width: 200px;">
                Tổng tiền:<br><%= number_to_currency(total) %> VND
              </li>
              <li>
                <%= link_to "Đặt hàng" , bill_details_path,
                  style: "background-color:lightseagreen;" %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</div>
