<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <div class="col-xs-12">
        <div class="col-xs-6 item-photo">
          <%= image_tag "#{@product.image.url}",
            style: "max-width:100%; margin-top:15px" %>
        </div>
        <div class="col-xs-6" style="border:0px solid gray">
          <h3><%= @product.name %></h3>    
          <h6 class="title-price"><small>Giá sản phẩm</small></h6>
          <strong style="margin-top:0px;">
            <%= number_to_currency(@product.price) %> VND
          </strong>
          <br>
          <div class="section" style="padding-bottom:5px;">
            <h6 class="title-attr"><small>Số lượng</small></h6>                    
            <strong style="margin-top:0px;">
              <%= @product.quantity %> SP
            </strong>
            <br>
          </div>
          <%= form_tag "/bills/#{@product.id}", method: :get do %>
            <div class="section" style="padding-bottom:20px;">
              <h6 class="title-attr"><small>Bạn muốn mua?</small></h6>
              <strong>
                <%= number_field_tag 'quantity', params[:quantity],
                  {min: 1, value: 1, max: @product.quantity} %> SP
              </strong>
            </div>
            <div class="section" style="padding-bottom:20px;">
              <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
                <i style="color:white;padding:10px" class="glyphicon glyphicon-shopping-cart" aria-hidden="true">
                  Add_To_Cart
                </i>
              <% end %>
            </div>
          <% end %>                       
        </div>
      </div>
      <div class="col-xs-12">
        <div style="width:100%;border-top:1px solid silver">
          <p style="padding:15px;">
            <small>
              <%= @product.description %>
            </small>
          </p>
        </div>
      </div>
    </div>
    <div class="col-xs-2">
      <h5 style="color:steelblue;"><%= @product.category.name %></h5>
      <% @category_product.each do |cp| %>
        <div style="width:100%;border-top:1px solid silver">
          <%= link_to product_path(id: cp.id) do %>
            <%= image_tag "#{cp.image.url}",
            style: "max-width:100%; margin-top:15px" %>
            <small style="color:red">
              <%= cp.name %>
            </small>
          <% end %>
          <br>
          <small>
              Price: <%= number_to_currency cp.price %>
          </small>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12"></div>
    <div class="row">                    
    </div>
  </div>
</div>        
